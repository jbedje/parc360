# PARC360 Backend - Production Environment Variables
# Copy this file to .env and fill with your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/parc360

# Option 2: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/parc360?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a strong secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_change_this_in_production
JWT_EXPIRE=30d

# Admin Configuration (Optional)
ADMIN_EMAIL=admin@parc360.ci
ADMIN_PASSWORD=secure_admin_password_change_this

# CORS Configuration (Optional)
# CORS_ORIGIN=https://yourdomain.com

# Logging (Optional)
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/backend.log

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration (Optional)
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=./uploads
